{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/build",
  "framework": "create-react-app",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ]
} 